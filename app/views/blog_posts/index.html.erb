<% content_for :title, "Blog" %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-amber-900 mb-8">Blog</h1>

    <% if @blog_posts.any? %>
      <div class="space-y-8">
        <% @blog_posts.each do |blog_post| %>
          <article class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <h2 class="text-2xl font-semibold text-gray-900 mb-3">
              <%= link_to blog_post.title, blog_post_path(blog_post.slug), class: "text-amber-600 hover:text-amber-800 no-underline" %>
            </h2>

            <div class="text-gray-600 text-sm mb-4">
              Published on <%= blog_post.created_at.strftime("%B %d, %Y") %>
            </div>

            <div class="text-gray-700 mb-4">
              <%= blog_post.excerpt %>
            </div>

            <%= link_to "Read more", blog_post_path(blog_post.slug), class: "inline-block bg-amber-600 text-white px-4 py-2 rounded hover:bg-amber-700 no-underline" %>
          </article>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-600 text-lg">No blog posts published yet.</p>
      </div>
    <% end %>
  </div>
</div>
