<div class="min-h-screen bg-amber-50 py-12">
  <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold text-amber-900 mb-4">Resend Confirmation Email</h2>
    <p class="text-gray-700 mb-6">Please enter your email address to have the confirmation email resent.</p>

    <%= form_with url: resend_confirmation_email_path, method: :post, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :email, "Email", class: "block text-gray-600" %>
        <%= form.email_field :email, required: true, class: "mt-1 w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-amber-300" %>
      </div>
      <div>
        <%= form.submit "Resend Confirmation Email", class: "w-full bg-amber-500 hover:bg-amber-600 text-white font-bold py-2 px-4 rounded-lg" %>
      </div>
    <% end %>
  </div>
</div>