<div class="max-w-6xl mx-auto mt-8 p-8 bg-white rounded shadow">
  <div class="text-center mb-8">
    <h1 class="text-2xl font-bold mb-6">Admin Dashboard</h1>
    <%= button_to 'Log out', destroy_admin_session_path, data: { turbo: false }, method: :delete, class: 'px-6 py-2 bg-amber-800 text-white rounded hover:bg-amber-700' %>
  </div>

  <div class="mt-8">
    <h2 class="text-xl font-semibold mb-4">Employers</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border border-gray-300">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Job Offers</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @employers.each do |employer| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= employer.company_name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= employer.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= employer.job_offers.count %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= button_to 'View as', admin_impersonate_employer_path(employer),
                    method: :post,
                    class: 'px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700',
                    data: { turbo: false } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if @employers.empty? %>
        <div class="text-center py-8 text-gray-500">
          No employers found.
        </div>
      <% end %>
    </div>
  </div>
</div>
