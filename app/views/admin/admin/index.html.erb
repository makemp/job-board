<div class="max-w-6xl mx-auto mt-8 p-8 bg-white rounded shadow">
  <div class="text-center mb-8">
    <h1 class="text-2xl font-bold mb-6">Admin Dashboard</h1>
    <div class="flex justify-center items-center gap-4">
      <%= button_to 'Log out', destroy_admin_session_path, data: { turbo: false }, method: :delete, class: 'px-6 py-2 bg-amber-800 text-white rounded hover:bg-amber-700 transition-colors' %>
      <%= link_to 'Analytics', '/amdg/blazer', target: '_blank', class: 'inline-block px-6 py-2 bg-amber-400 text-white rounded hover:bg-blue-700 transition-colors text-center' %>
    </div>
  </div>

  <!-- Tab Navigation -->
  <div data-controller="tabs" data-tabs-initial-tab-value="employers">
    <div class="border-b border-gray-200 mb-6">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <button class="tab-button active border-transparent text-gray-900 whitespace-nowrap border-b-2 font-medium text-sm py-2 px-1 border-blue-500 text-blue-600"
                data-tabs-target="tab"
                data-tab-name="employers"
                data-action="click->tabs#show">
          Employers
        </button>
        <button class="tab-button border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap border-b-2 font-medium text-sm py-2 px-1"
                data-tabs-target="tab"
                data-tab-name="add-offer"
                data-action="click->tabs#show">
          Add External Offer
        </button>
        <button class="tab-button border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap border-b-2 font-medium text-sm py-2 px-1"
                data-tabs-target="tab"
                data-tab-name="exports"
                data-action="click->tabs#show">
          Export Jobs
        </button>
      </nav>
    </div>

    <!-- Tab Content -->
    <div class="tab-content">
      <div id="employers-tab"
           class="tab-panel active"
           data-tabs-target="pane"
           data-tab-name="employers">
        <%= render 'employers', employers: @employers %>
      </div>
      <div id="add-offer-tab"
           class="tab-panel hidden"
           data-tabs-target="pane"
           data-tab-name="add-offer">
        <%= render 'add_external_offer' %>
      </div>
      <div id="exports-tab"
           class="tab-panel hidden"
           data-tabs-target="pane"
           data-tab-name="exports">
        <div data-controller="export" class="space-y-6">
          <!-- Date Pickers -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="from_date" class="block text-sm font-medium text-gray-700 mb-2">From Date</label>
              <input type="date"
                     id="from_date"
                     data-export-target="fromDate"
                     class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
            <div>
              <label for="to_date" class="block text-sm font-medium text-gray-700 mb-2">To Date</label>
              <input type="date"
                     id="to_date"
                     data-export-target="toDate"
                     class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
          </div>

          <!-- Job Offer Type Select -->
          <div>
            <label for="job_type" class="block text-sm font-medium text-gray-700 mb-2">Job Offer Type</label>
            <select id="job_type"
                    data-export-target="jobType"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="All">All</option>
              <option value="Drilling">Drilling</option>
              <option value="Mining">Mining</option>
              <option value="Drilling/Mining">Drilling/Mining</option>
              <option value="Other">Other</option>
            </select>
          </div>

          <!-- Platform Select -->
          <div>
            <label for="platform" class="block text-sm font-medium text-gray-700 mb-2">Platform</label>
            <select id="platform"
                    data-export-target="platform"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="X/Twitter">X/Twitter</option>
              <option value="Reddit">Reddit</option>
              <option value="Linkedin">LinkedIn</option>
              <option value="Facebook">Facebook</option>
            </select>
          </div>

          <!-- Export Button -->
          <div class="text-center">
            <button data-export-target="exportButton"
                    data-action="click->export#export"
                    class="px-8 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
              Export
            </button>
          </div>

          <!-- Output Section -->
          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <label for="output" class="block text-sm font-medium text-gray-700">Generated Markdown</label>
              <button data-action="click->export#copyToClipboard"
                      class="px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors">
                Copy to Clipboard
              </button>
            </div>
            <textarea id="output"
                      data-export-target="output"
                      readonly
                      rows="20"
                      placeholder="Generated markdown will appear here..."
                      class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-gray-50 font-mono text-sm resize-y"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
