<div class="mt-8" data-controller="external-offer" data-action="turbo:submit-end->external-offer#handleSubmitEnd">
  <!-- Flash Messages Container -->
  <div id="flash-messages">
    <!-- Flash messages will appear here -->
  </div>

  <div class="flex items-center gap-3 mb-4">
    <h2 class="text-xl font-semibold">Add External Offer</h2>

    <!-- Info button with toggle functionality -->
    <div data-controller="toggle">
      <button type="button"
              data-action="click->toggle#toggle"
              class="inline-flex items-center justify-center w-6 h-6 bg-blue-100 hover:bg-blue-200 text-blue-600 rounded-full transition-colors duration-200"
              title="Show company URLs">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
      </button>

      <!-- Company URLs text box (hidden by default) -->
      <div data-toggle-target="content" class="hidden mt-3 p-4 bg-gray-50 rounded-lg border border-gray-200">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Company Career Pages:</h3>
        <div class="text-sm text-gray-600 space-y-1">
          <div><strong>Shell:</strong> <a href="https://jobs.shell.com/" target="_blank" class="text-blue-600 hover:underline">https://jobs.shell.com/</a></div>
          <div><strong>ExxonMobil:</strong> <a href="https://jobs.exxonmobil.com/" target="_blank" class="text-blue-600 hover:underline">https://jobs.exxonmobil.com/</a></div>
          <div><strong>Chevron:</strong> <a href="https://careers.chevron.com/" target="_blank" class="text-blue-600 hover:underline">https://careers.chevron.com/</a></div>
          <div><strong>TotalEnergies:</strong> <a href="https://careers.totalenergies.com/en" target="_blank" class="text-blue-600 hover:underline">https://careers.totalenergies.com/en</a></div>
          <div><strong>Schlumberger (SLB):</strong> <a href="https://careers.slb.com/" target="_blank" class="text-blue-600 hover:underline">https://careers.slb.com/</a></div>
          <div><strong>Halliburton:</strong> <a href="https://jobs.halliburton.com/" target="_blank" class="text-blue-600 hover:underline">https://jobs.halliburton.com/</a></div>
          <div><strong>Baker Hughes:</strong> <a href="https://careers.bakerhughes.com/" target="_blank" class="text-blue-600 hover:underline">https://careers.bakerhughes.com/</a></div>
          <div><strong>BHP:</strong> <a href="https://careers.bhp.com/search/?createNewAlert=false&q=&optionsFacetsDD_location=&optionsFacetsDD_customfield1=&optionsFacetsDD_title=&optionsFacetsDD_customfield4=" target="_blank" class="text-blue-600 hover:underline">https://careers.bhp.com/search/</a></div>
          <div><strong>Rio Tinto:</strong> <a href="https://www.riotinto.com/careers" target="_blank" class="text-blue-600 hover:underline">https://www.riotinto.com/careers</a></div>
          <div><strong>Glencore:</strong> <a href="https://www.glencore.com/careers/career-opportunities" target="_blank" class="text-blue-600 hover:underline">https://www.glencore.com/careers/career-opportunities</a></div>
        </div>
      </div>
    </div>
  </div>

  <%= form_with url: admin_external_offers_path, method: :post, data: {
    "external-offer-target": "form",
    "action": "turbo:submit-start->external-offer#submit"
  }, class: "space-y-6" do |form| %>

    <!-- Loading Indicator -->
    <div data-external-offer-target="loadingIndicator" class="hidden">
      <div class="flex items-center justify-center p-4 bg-blue-50 rounded-md border border-blue-200">
        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span class="text-blue-700 font-medium">Creating external offer...</span>
      </div>
    </div>

    <div>
      <%= form.label :url, "URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :url,
          data: {
            "external-offer-target": "urlField",
            "action": "input->external-offer#checkUrl paste->external-offer#checkUrl"
          },
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "https://example.com/job-offer" %>
      <!-- URL Status Container -->
      <div data-external-offer-target="urlStatus"></div>
    </div>

    <div>
      <%= form.label :html, "HTML Content", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :html,
          rows: 12,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-sm",
          placeholder: "Enter HTML content or plain text for the job offer..." %>
    </div>

    <div>
      <%= form.label :json, "JSON", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :json,
                         rows: 12,
                         class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-sm",
                         placeholder: "Instead of filling out above, just use this field to fill paste JSON for external job offer." %>
    </div>

    <div>
      <%= form.submit "Create",
          data: { "external-offer-target": "submitButton" },
          class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors disabled:opacity-50 disabled:cursor-not-allowed" %>
    </div>
  <% end %>
</div>
