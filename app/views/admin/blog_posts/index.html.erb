<% content_for :title, "Blog Posts" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Blog Posts</h1>
    <%= link_to "New Blog Post", new_admin_blog_post_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 no-underline" %>
  </div>

  <% if @blog_posts.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @blog_posts.each do |blog_post| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= blog_post.title %></div>
                <div class="text-sm text-gray-500"><%= truncate(blog_post.excerpt, length: 80) %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if blog_post.published? %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                    Published
                  </span>
                <% else %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                    Draft
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= blog_post.created_at.strftime("%m/%d/%Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "View", admin_blog_post_path(blog_post), class: "text-blue-600 hover:text-blue-900 mr-3" %>
                <%= link_to "Edit", edit_admin_blog_post_path(blog_post), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <%= link_to "Delete", admin_blog_post_path(blog_post), method: :delete,
                    confirm: "Are you sure?", class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-600 text-lg mb-4">No blog posts created yet.</p>
      <%= link_to "Create your first blog post", new_admin_blog_post_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 no-underline" %>
    </div>
  <% end %>
</div>
