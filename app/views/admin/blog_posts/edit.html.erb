<% content_for :title, "Edit Blog Post" %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <nav class="mb-6">
      <%= link_to "â† Back to Blog Posts", admin_blog_posts_path, class: "text-blue-600 hover:text-blue-800 no-underline" %>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Blog Post</h1>

    <%= form_with model: [:admin, @blog_post], local: true, class: "space-y-6" do |form| %>
      <% if @blog_post.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@blog_post.errors.count, "error") %> prohibited this blog post from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @blog_post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="text-sm text-gray-500 mb-2">
          You can include YouTube URLs (e.g., https://www.youtube.com/watch?v=VIDEO_ID) and they will be automatically embedded as videos.
        </div>
        <%= form.text_area :body, rows: 15, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="flex items-center">
        <%= form.check_box :published, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= form.label :published, "Published", class: "ml-2 block text-sm text-gray-900" %>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancel", admin_blog_posts_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400 no-underline" %>
        <%= form.submit "Update Blog Post", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
