<div class="max-w-md mx-auto mt-16 p-8 bg-white rounded shadow">
  <h1 class="text-2xl font-bold mb-6 text-center">Admin Login</h1>
  <% if flash[:alert] %>
    <div class="mb-4 p-2 bg-red-100 text-red-700 rounded">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <%= form_with url: admin_session_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 border rounded" %>
    </div>
    <div class="mb-6">
      <%= f.label :password, class: "block text-gray-700" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border rounded" %>
    </div>
    <div class="flex justify-center">
      <%= f.submit "Log in", class: "px-6 py-2 bg-amber-800 text-white rounded hover:bg-amber-700" %>
    </div>
  <% end %>
</div>

