<div class="min-h-screen bg-amber-50">
  <!-- Header -->
  <header class="bg-amber-900 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold text-amber-100">Job Board</h1>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Jobs List -->
    <div class="grid gap-6">
      <% @jobs.each do |job| %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 border border-amber-200">
          <div class="p-6">
            <div class="flex justify-between items-start">
              <div>
                <h2 class="text-xl font-semibold text-amber-900 mb-2"><%= job.title %></h2>
                <p class="text-amber-700 line-clamp-2"><%= job.description %></p>
              </div>
              
              <!-- Apply Button -->
              <button class="bg-amber-800 text-white px-6 py-2 rounded-full hover:bg-amber-700 transition-colors duration-300">
                See more
              </button>
            </div>

            <!-- Job Meta Information -->
            <div class="mt-4 flex items-center gap-4 text-sm text-amber-600">
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
                <%= job.location %>
              </span>
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd"/>
                </svg>
                Full-time
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </main>
</div>