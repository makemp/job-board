<div class="min-h-screen bg-amber-50 py-12">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Pricing Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-amber-900 mb-4">Post a New Job</h1>
      <p class="text-lg text-amber-700">Reach thousands of qualified candidates with your job posting</p>
    </div>

    <!-- Pricing Card -->
    <div class="bg-white rounded-lg shadow-xl p-8 mb-12">
      <div class="flex justify-between items-center mb-8">
        <div>
          <h2 class="text-2xl font-semibold text-amber-900">Standard Listing</h2>
          <p class="text-amber-600 mt-2">30 days visibility</p>
        </div>
        <div class="text-3xl font-bold text-amber-900">$299</div>
      </div>

      <ul class="mb-8 space-y-4">
        <li class="flex items-center text-amber-700">
          <svg class="w-5 h-5 mr-3 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          Featured on the homepage for 30 days
        </li>
        <li class="flex items-center text-amber-700">
          <svg class="w-5 h-5 mr-3 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          Reach thousands of qualified candidates
        </li>
      </ul>
    </div>

    <!-- Job Form -->
    <%= form_with(model: @job, class: "space-y-6") do |f| %>
      <div class="bg-white rounded-lg shadow-xl p-8">
        <div class="space-y-6">
          <div>
            <%= f.label :title, class: "block text-sm font-medium text-amber-900" %>
            <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-amber-300 shadow-sm focus:border-amber-500 focus:ring focus:ring-amber-500 focus:ring-opacity-50" %>
          </div>

          <div>
            <%= f.label :email, "Contact Email", class: "block text-sm font-medium text-amber-900" %>
            <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-amber-300 shadow-sm focus:border-amber-500 focus:ring focus:ring-amber-500 focus:ring-opacity-50" %>
          </div>

          <div>
            <%= f.label :category, class: "block text-sm font-medium text-amber-900" %>
            <%= f.select :category, Job::CATEGORIES, { prompt: "Select a category" }, 
                class: "mt-1 block w-full rounded-md border-amber-300 shadow-sm focus:border-amber-500 focus:ring focus:ring-amber-500 focus:ring-opacity-50" %>
          </div>

          <div>
            <%= f.label :location, class: "block text-sm font-medium text-amber-900" %>
            <%= f.select :location, Job::REGIONS, { prompt: "Select location" },
                class: "mt-1 block w-full rounded-md border-amber-300 shadow-sm focus:border-amber-500 focus:ring focus:ring-amber-500 focus:ring-opacity-50" %>
          </div>

          <div>
            <%= f.label :description, class: "block text-sm font-medium text-amber-900" %>
            <%= f.text_area :description, rows: 10, class: "mt-1 block w-full rounded-md border-amber-300 shadow-sm focus:border-amber-500 focus:ring focus:ring-amber-500 focus:ring-opacity-50" %>
            <p class="mt-2 text-sm text-amber-600">Markdown is supported</p>
          </div>

          <div>
            <%= f.label :logo, "Company Logo", class: "block text-sm font-medium text-amber-900" %>
            <%= f.file_field :logo, 
                accept: 'image/*',
                class: "mt-1 block w-full text-sm text-amber-900
                      file:mr-4 file:py-2 file:px-4
                      file:rounded-full file:border-0
                      file:text-sm file:font-semibold
                      file:bg-amber-100 file:text-amber-700
                      hover:file:bg-amber-200" %>
            <p class="mt-2 text-sm text-amber-600">Upload a square image with transparent background (max 1MB)</p>
          </div>
        </div>

        <div class="mt-8">
          <%= f.submit "Post Job - $299", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-amber-800 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div> 