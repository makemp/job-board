<header class="bg-amber-900 shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative" data-controller="mobile-menu">
    <!-- Mobile layout -->
    <div id="top-logo-mobile" class="flex justify-between items-center md:hidden py-2">
      <%= link_to root_path, class: "block" do %>
        <%= image_tag "drillcrew-logo.png", alt: "Logo", class: "h-16 w-auto object-contain" %>
      <% end %>

      <% if current_admin %>
        <%= link_to admin_dashboard_path, class: "inline-flex items-center justify-center p-2 rounded-md text-amber-100 hover:text-white hover:bg-amber-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white transition-colors duration-200", title: "Admin Dashboard" do %>
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        <% end %>
      <% end %>

      <!-- Mobile menu button -->
      <button data-action="click->mobile-menu#toggle" class="inline-flex items-center justify-center p-2 rounded-md text-amber-100 hover:text-white hover:bg-amber-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
        <svg data-mobile-menu-target="hamburgerIcon" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg data-mobile-menu-target="closeIcon" class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Desktop layout -->
    <div id="top-logo-browser" class="hidden md:flex justify-between items-center py-0">
      <%= link_to root_path, class: "block" do %>
        <%= image_tag "drillcrew-logo.png", alt: "Logo", class: "h-20 w-auto object-contain" %>
      <% end %>

      <% if current_admin %>
        <%= link_to admin_dashboard_path, class: "inline-flex items-center px-4 py-2 rounded-full bg-amber-800 text-amber-100 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors duration-200", title: "Admin Dashboard" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          <span class="text-sm font-medium">Admin</span>
        <% end %>
      <% end %>

      <div class="flex items-center space-x-4">
        <!-- Blog button -->
        <%= link_to blog_posts_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-full text-amber-900 bg-amber-100 hover:bg-amber-200 transition-colors duration-300" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 01-2-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
          </svg>
          Blog
        <% end %>

        <% if employer_signed_in? %>
          <div class="relative group">
            <button type="button" class="inline-flex items-center px-6 py-3 rounded-full bg-amber-800 text-amber-100 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 cursor-pointer">
              <span class="mr-2">Menu</span>
              <svg class="w-4 h-4 transform transition-transform duration-200 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <div class="absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transform translate-y-1 group-hover:translate-y-0 transition-all duration-200 z-20 divide-y divide-gray-100">
              <%= link_to 'Dashboard', employers_dashboard_path, class: "block px-4 py-2 text-gray-800 hover:bg-gray-100 cursor-pointer" %>
              <%= button_to 'Sign out', destroy_employer_session_path, method: :delete, data: { turbo: false }, class: "w-full text-left block px-4 py-2 text-gray-800 hover:bg-gray-100 cursor-pointer" %>
            </div>
          </div>
        <% else %>
          <%= link_to new_employer_session_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-full text-amber-900 bg-amber-100 hover:bg-amber-200 transition-colors duration-300" do %>
            Employer Sign in
          <% end %>
        <% end %>

        <%= link_to new_job_offer_forms_path,
                    class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-full text-amber-900 bg-amber-100 hover:bg-amber-200 transition-colors duration-300" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Post a Job
        <% end %>
      </div>
    </div>

    <!-- Mobile menu -->
    <div data-mobile-menu-target="menu" class="hidden md:hidden mt-4 border-t border-amber-800 pt-4">
      <div class="space-y-3">
        <!-- Blog button for mobile -->
        <%= link_to blog_posts_path, class: "flex items-center px-3 py-2 text-base font-medium text-amber-100 hover:text-white hover:bg-amber-800 rounded-md" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 01-2-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
          </svg>
          Blog
        <% end %>

        <% if employer_signed_in? %>
          <%= link_to 'Dashboard', employers_dashboard_path, class: "block px-3 py-2 text-base font-medium text-amber-100 hover:text-white hover:bg-amber-800 rounded-md" %>
          <%= button_to 'Sign out', destroy_employer_session_path, method: :delete, data: { turbo: false }, class: "w-full text-left block px-3 py-2 text-base font-medium text-amber-100 hover:text-white hover:bg-amber-800 rounded-md" %>
        <% else %>
          <%= link_to new_employer_session_path, class: "block px-3 py-2 text-base font-medium text-amber-100 hover:text-white hover:bg-amber-800 rounded-md" do %>
            Employer Sign in
          <% end %>
        <% end %>

        <%= link_to new_job_offer_forms_path, class: "flex items-center px-3 py-2 text-base font-medium text-amber-100 hover:text-white hover:bg-amber-800 rounded-md" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Post a Job
        <% end %>
      </div>
    </div>
  </div>
</header>
