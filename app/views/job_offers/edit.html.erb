<div class="max-w-3xl mx-auto mt-12 p-6 bg-white rounded-lg shadow">
  <h1 class="text-3xl font-bold mb-6 text-amber-900">Edit Job Offer</h1>

  <% if @job_offer.errors.any? %>
    <div class="mb-6 flex items-start bg-red-50 border border-red-300 text-red-800 p-4 rounded-lg">
      <svg class="w-6 h-6 flex-shrink-0 mr-3 text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8.257 3.099c.366-.446.957-.446 1.323 0l7 8.5a1 1 0 01-.661 1.6H2.918a1 1 0 01-.66-1.6l7-8.5z" clip-rule="evenodd"/></svg>
      <div>
        <h2 class="font-semibold mb-2"><%= pluralize(@job_offer.errors.count, "error") %> prevented saving:</h2>
        <ul class="list-disc list-inside">
          <% @job_offer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= form_with model: @job_offer, local: true, html: { class: 'space-y-6' } do |f| %>
    <div>
      <%= f.label 'Job title', class: "block text-sm font-medium text-amber-900" %>
      <%= f.text_field :title, class:  "mt-1 block w-full rounded-md border border-amber-300 shadow-sm focus:border-amber-500 focus:ring focus:ring-amber-500 focus:ring-opacity-50" %>
      <%= error_messages_for(f, :title) %>
    </div>

    <div>
      <%= f.label :company_name, "Company Name", class: "block text-sm font-medium text-amber-900" %>
      <%= f.text_field :company_name, class: "mt-1 block w-full rounded-md border border-amber-300 shadow-sm focus:border-amber-500 focus:ring focus:ring-amber-500 focus:ring-opacity-50" %>
      <%= error_messages_for(f, :company_name) %>
    </div>

    <div>
      <%= f.label 'Job description', class: "block text-sm font-medium text-amber-900" %>
      <%= f.rich_text_area :description, class:  "mt-1 block w-full rounded-md border border-amber-300 shadow-sm focus:border-amber-500 focus:ring focus:ring-amber-500 focus:ring-opacity-50" %>
      <%= error_messages_for(f, :description) %>
    </div>

    <div>
      <%= f.label :logo, "Company Logo", class: "block text-sm font-medium text-amber-900" %>
      <%= f.file_field :logo,
                       accept: 'image/*',
                       class: "mt-1 block w-full text-sm text-amber-900
                      file:mr-4 file:py-2 file:px-4
                      file:rounded-full file:border-0
                      file:text-sm file:font-semibold
                      file:bg-amber-100 file:text-amber-700
                      hover:file:bg-amber-200" %>
      <%= error_messages_for(f, :logo) %>
      <p class="mt-2 text-sm text-amber-600">Upload a square image(max 1MB)</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :category, class: "block text-sm font-medium text-amber-900" %>
        <%= f.select :category, JobOffer::CATEGORIES, prompt: "Select category", class: "mt-2 w-full border border-gray-300 rounded-lg p-3 focus:ring-amber-500" %>
        <%= error_messages_for(f, :category) %>
      </div>
      <div>
        <%= f.label :location, class: "block text-sm font-medium text-amber-900" %>
        <%= f.select :location, JobOffer::HIGHLIGHTED_REGIONS + JobOffer::REGIONS, prompt: "Select location", class: "mt-2 w-full border border-gray-300 rounded-lg p-3 focus:ring-amber-500" %>
        <%= error_messages_for(f, :location) %>
      </div>
    </div>

    <div class="flex justify-end items-center space-x-4">
      <%= link_to 'Cancel', job_offer_path(@job_offer,success: true), class: 'px-4 py-2 text-gray-700 hover:text-gray-900' %>
      <%= f.submit "Save Changes", class: "px-6 py-2 bg-amber-900 text-white rounded-lg hover:bg-amber-800 transition-colors" %>
    <% end %>
  </div>
</div>


