<div class="max-w-3xl mx-auto mt-12 p-6 bg-white rounded-lg shadow">
  <h1 class="text-2xl font-semibold mb-4 text-amber-900">Edit Job Offer</h1>

  <% if @job_offer.errors.any? %>
    <div class="mb-4 bg-red-100 border border-red-400 text-red-800 p-4 rounded">
      <h2 class="font-bold mb-2"><%= pluralize(@job_offer.errors.count, "error") %> prohibited this job from being saved:</h2>
      <ul class="list-disc list-inside">
        <% @job_offer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @job_offer, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :title, class: "block text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :description, class: "block text-gray-700" %>
      <%= f.rich_text_area :description, class: "mt-1 w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :category, class: "block text-gray-700" %>
      <%= f.select :category, JobOffer::CATEGORIES, prompt: "Select category", class: "mt-1 w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :location, class: "block text-gray-700" %>
      <%= f.select :location, JobOffer::HIGHLIGHTED_REGIONS + JobOffer::REGIONS, prompt: "Select location", class: "mt-1 w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Save Changes", class: "px-6 py-2 bg-amber-900 text-white rounded-md hover:bg-amber-800" %>
    </div>
  <% end %>
</div>

