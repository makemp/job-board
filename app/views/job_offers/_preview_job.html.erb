<%
  # Set meta tags for individual job page
  job_title = "#{job_offer.title} at #{job_offer.company_name}"
  job_description = truncate(strip_tags(job_offer.description.to_s), length: 160)
  job_description = "#{job_title} in #{job_offer.region}. #{job_description}" if job_description.present?
  job_description = "#{job_title} - Apply now on DrillCrew job board." if job_description.blank?

  set_meta_tags(
    title: "#{job_title} - DrillCrew - job preview",
    description: job_description,
    canonical: job_offer_url(job_offer),
    url: job_offer_url(job_offer),
    type: "article",
    noindex: true,
    follow: true
  )
%>

<div class="h-full bg-white overflow-y-auto">
  <div class="p-6">
    <!-- Header with close button -->
    <div class="flex justify-between items-start mb-6">
      <div class="flex-1">
        <h1 class="text-2xl font-bold <%= job_offer.expired? ? 'text-gray-500' : 'text-amber-900' %> mb-2">
          <%= job_offer.title %>
          <% if job_offer.expired? %>
            <span class="text-sm text-red-500 block font-normal">(EXPIRED)</span>
          <% end %>
        </h1>
        <p class="text-lg <%= job_offer.expired? ? 'text-gray-400' : 'text-amber-700' %>"><%= job_offer.company_name %></p>
      </div>
      <!-- Action buttons -->
      <div class="flex items-center space-x-2">
        <a href="<%= job_offer_url(job_offer) %>" target="_blank" rel="noopener noreferrer"
           class="group relative flex items-center justify-center h-10 w-10 bg-amber-800 hover:bg-amber-700 text-white rounded-full shadow transition-colors duration-300"
           aria-label="Open in a new tab">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14 3h7m0 0v7m0-7L10 14m-4 0v7a2 2 0 002 2h8a2 2 0 002-2v-8a2 2 0 00-2-2h-7" />
          </svg>
          <span class="absolute left-1/2 -translate-x-1/2 top-full mt-2 px-2 py-1 rounded bg-gray-900 text-white text-xs opacity-0 group-hover:opacity-100 pointer-events-none whitespace-nowrap z-10 transition-opacity duration-200">Open in a new tab</span>
        </a>

        <!-- Copy URL Icon Button -->
        <button data-controller="copy-url"
                data-copy-url-url-value="<%= job_offer_url(job_offer) %>"
                data-action="click->copy-url#copy"
                data-copy-url-target="button"
                type="button"
                aria-label="Copy job offer URL"
                class="flex items-center justify-center h-10 w-10 bg-amber-800 hover:bg-amber-700 text-white rounded-full shadow transition-colors duration-300 group relative transition-opacity duration-200 cursor-pointer">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>
          <span class="absolute left-1/2 -translate-x-1/2 top-full mt-2 px-2 py-1 rounded bg-gray-900 text-white text-xs opacity-0 group-hover:opacity-100 pointer-events-none whitespace-nowrap z-10">Copy the link</span>
        </button>

      </div>
    </div>

    <!-- Logo -->
    <% if job_offer.logo.attached? %>
      <div class="mb-6 flex justify-center">
        <%= image_tag job_offer.logo, alt: job_offer.title, class: "h-20 w-20 object-contain rounded-lg #{'opacity-50' if job_offer.expired?}" %>
      </div>
    <% end %>

    <!-- Job meta information -->
    <div class="mb-6">
      <div class="<%= job_offer.expired? ? 'bg-gray-100' : 'bg-amber-50' %> p-4 rounded-lg">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <p class="text-sm font-semibold <%= job_offer.expired? ? 'text-gray-600' : 'text-amber-800' %>">Region</p>
            <p class="text-sm <%= job_offer.expired? ? 'text-gray-500' : 'text-amber-700' %>"><%= job_offer_location(job_offer) %></p>
          </div>
          <div>
            <p class="text-sm font-semibold <%= job_offer.expired? ? 'text-gray-600' : 'text-amber-800' %>">Category</p>
            <p class="text-sm <%= job_offer.expired? ? 'text-gray-500' : 'text-amber-700' %>"><%= job_offer.category %></p>
          </div>
          <div>
            <p class="text-sm font-semibold <%= job_offer.expired? ? 'text-gray-600' : 'text-amber-800' %>">
              <%= job_offer.expired? ? 'Expired' : 'Posted' %>
            </p>
            <p class="text-sm <%= job_offer.expired? ? 'text-gray-500' : 'text-amber-700' %>">
              <%= if job_offer.expired?
                    time_ago_in_words(job_offer.expired_on) + " ago"
                  else
                    time_ago_in_words(job_offer.created_at) + " ago"
                  end %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Job Description -->
    <div class="prose prose-sm max-w-none <%= job_offer.expired? ? 'text-gray-600' : 'text-amber-800' %> mb-6">
      <h2 class="text-lg font-semibold <%= job_offer.expired? ? 'text-gray-700' : 'text-amber-900' %> mb-4">Job Description</h2>
      <%= job_offer.description %>
    </div>

    <%= render 'form', job_offer: job_offer %>
  </div>
</div>
