<div class="mt-8 max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-lg">
  <div class="flex items-start justify-between mb-6">
    <div>
      <h1 class="text-4xl font-bold text-amber-900 mb-2">
        <%= @job_offer.title %>
      </h1>
      <p class="text-xl text-amber-700"><%= @job_offer.company_name %></p>
    </div>
    <% if @job_offer.logo.attached? %>
      <%= image_tag @job_offer.logo, alt: @job_offer.title, class: "h-20 w-20 object-contain rounded-lg border border-gray-200" %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="bg-amber-50 p-4 rounded-lg">
      <p class="text-lg font-semibold text-amber-800">Location</p>
      <p class="text-amber-700"><%= @job_offer.location %></p>
    </div>
    <div class="bg-amber-50 p-4 rounded-lg">
      <p class="text-lg font-semibold text-amber-800">Category</p>
      <p class="text-amber-700"><%= @job_offer.category %></p>
    </div>
    <div class="bg-amber-50 p-4 rounded-lg">
      <p class="text-lg font-semibold text-amber-800">Posted</p>
      <p class="text-amber-700"><%= time_ago_in_words(@job_offer.created_at) %> ago</p>
    </div>
  </div>

  <div class="prose max-w-none text-amber-800 mb-8">
    <h2 class="text-2xl font-semibold text-amber-900 mb-4">Job Description</h2>
    <%= @job_offer.description %>
  </div>

  <div class="flex items-center justify-between">
    <button class="inline-block bg-amber-800 text-white px-6 py-3 rounded-lg hover:bg-amber-700 transition-colors duration-300 text-lg font-semibold" onclick="handleBackClick(event)">
      Back to Job Offers
    </button>
    <% if current_employer && current_employer.id == @job_offer.employer_id %>
      <%= link_to edit_job_offer_path(@job_offer), title: 'Edit Job Offer', class: 'text-amber-600 hover:text-amber-800 transition-colors duration-300' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M15.232 5.232l3.536 3.536M16.5 3.5a2.121 2.121 0 013 3L7 19.5H4.5v-2.5L16.5 3.5z"/>
        </svg>
      <% end %>
    <% end %>
  </div>
</div>

<script>
    function handleBackClick(event) {
        event.preventDefault();
        const params = new URLSearchParams(window.location.search);
        if (params.has('success')) {
            return window.location.href = '/';
        }
        const { referrer } = document;
        if (referrer && new URL(referrer).origin === window.location.origin) {
            window.history.back();
        } else {
            window.location.href = '/';
        }
    }
</script>
