<div class="mt-4 sm:mt-8 max-w-4xl mx-auto p-4 sm:p-6 bg-white rounded-lg shadow-lg <%= 'opacity-60 grayscale' if @job_offer.expired? %>">
  <div class="flex flex-col sm:flex-row sm:items-start justify-between mb-4 sm:mb-6">
    <div class="mb-4 sm:mb-0">
      <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold <%= @job_offer.expired? ? 'text-gray-500' : 'text-amber-900' %> mb-2">
        <%= @job_offer.title %>
        <% if @job_offer.expired? %>
          <span class="text-sm sm:text-lg text-red-500 block sm:inline sm:ml-3 font-normal">(EXPIRED)</span>
        <% end %>
      </h1>
      <p class="text-lg sm:text-xl <%= @job_offer.expired? ? 'text-gray-400' : 'text-amber-700' %>"><%= @job_offer.company_name %></p>
    </div>
    <% if @job_offer.logo.attached? %>
      <%= image_tag @job_offer.logo, alt: @job_offer.title, class: "h-16 w-16 sm:h-20 sm:w-20 object-contain rounded-lg self-center sm:self-start #{'opacity-50' if @job_offer.expired?}" %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 mb-4 sm:mb-6">
    <div class="<%= @job_offer.expired? ? 'bg-gray-100' : 'bg-amber-50' %> p-4 rounded-lg">
      <p class="text-base sm:text-lg font-semibold <%= @job_offer.expired? ? 'text-gray-600' : 'text-amber-800' %>">Location</p>
      <p class="text-sm sm:text-base <%= @job_offer.expired? ? 'text-gray-500' : 'text-amber-700' %>"><%= @job_offer.location %></p>
    </div>
    <div class="<%= @job_offer.expired? ? 'bg-gray-100' : 'bg-amber-50' %> p-4 rounded-lg">
      <p class="text-base sm:text-lg font-semibold <%= @job_offer.expired? ? 'text-gray-600' : 'text-amber-800' %>">Category</p>
      <p class="text-sm sm:text-base <%= @job_offer.expired? ? 'text-gray-500' : 'text-amber-700' %>"><%= @job_offer.category %></p>
    </div>
    <div class="<%= @job_offer.expired? ? 'bg-gray-100' : 'bg-amber-50' %> p-4 rounded-lg sm:col-span-2 lg:col-span-1">
      <p class="text-base sm:text-lg font-semibold <%= @job_offer.expired? ? 'text-gray-600' : 'text-amber-800' %>">
        <%= @job_offer.expired? ? 'Expired' : 'Posted' %>
      </p>
      <p class="text-sm sm:text-base <%= @job_offer.expired? ? 'text-gray-500' : 'text-amber-700' %>">
        <%= if @job_offer.expired?
              time_ago_in_words(@job_offer.expires_on) + " ago"
            else
              time_ago_in_words(@job_offer.created_at) + " ago"
            end %>
      </p>
    </div>
  </div>

  <div class="prose prose-sm sm:prose max-w-none <%= @job_offer.expired? ? 'text-gray-600' : 'text-amber-800' %> mb-6 sm:mb-8">
    <h2 class="text-xl sm:text-2xl font-semibold <%= @job_offer.expired? ? 'text-gray-700' : 'text-amber-900' %> mb-4">Job Description</h2>
    <%= @job_offer.description %>
  </div>

  <% if @job_offer.expired? %>
    <div class="flex justify-center my-6 sm:my-8">
      <div class="w-full max-w-xl bg-red-50 p-4 sm:p-6 rounded-lg shadow border border-red-200">
        <div class="text-center">
          <svg class="mx-auto h-8 w-8 sm:h-12 sm:w-12 text-red-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
          <h3 class="text-xl font-bold text-red-800 mb-2">This job offer has expired</h3>
          <p class="text-red-600">Applications are no longer being accepted for this position.</p>
        </div>
      </div>
    </div>
  <% elsif @job_offer.application_type == 'Form' %>
    <div class="flex justify-center my-6 sm:my-8">
      <div class="w-full max-w-xl bg-amber-50 p-4 sm:p-6 rounded-lg shadow">
        <h3 class="text-xl font-bold text-amber-900 mb-4">Apply for this job</h3>
        <%= form_with url: apply_with_form_job_offer_path(@job_offer), local: true, html: { multipart: true, class: 'space-y-4' } do |f| %>
          <div>
            <%= f.label :cv, 'Upload CV', class: 'block text-amber-900 mb-1' %>
            <%= f.file_field :cv, class: 'w-full bg-amber-700 border border-amber-800 rounded-md p-2 text-white', required: true, accept: '.pdf,.doc,.docx' %>
          </div>
          <div>
            <%= f.label :comments, 'Comments', class: 'block text-amber-900 mb-1' %>
            <%= f.text_area :comments, class: 'w-full border border-amber-300 rounded-md p-2', rows: 4, placeholder: 'Add a message or cover letter (optional)' %>
          </div>
          <div class="flex justify-end">
            <%= f.submit 'Send Application', class: 'bg-amber-700 hover:bg-amber-800 text-white px-6 py-3 rounded-lg font-bold shadow transition-colors duration-300' %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="flex justify-center my-6 sm:my-8">
      <%= link_to 'Apply Now', apply_with_url_job_offer_path(@job_offer), target: '_blank', rel: 'noopener noreferrer', class: 'inline-block bg-amber-700 hover:bg-amber-800 text-white px-8 py-4 rounded-lg text-xl font-bold shadow transition-colors duration-300' %>
    </div>
  <% end %>

  <div class="flex items-center justify-between">
    <button class="inline-block bg-amber-800 text-white px-6 py-3 rounded-lg hover:bg-amber-700 transition-colors duration-300 text-lg font-semibold" onclick="handleBackClick(event)">
      Back to Job Offers
    </button>
    <% if current_employer && current_employer.id == @job_offer.employer_id && !@job_offer.expired? %>
      <%= link_to edit_job_offer_path(@job_offer), title: 'Edit Job Offer', class: 'text-amber-600 hover:text-amber-800 transition-colors duration-300' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M15.232 5.232l3.536 3.536M16.5 3.5a2.121 2.121 0 013 3L7 19.5H4.5v-2.5L16.5 3.5z"/>
        </svg>
      <% end %>
    <% end %>
  </div>


</div>

<script>
    function handleBackClick(event) {
        event.preventDefault();
        const params = new URLSearchParams(window.location.search);
        if (params.has('success')) {
            return window.location.href = '/';
        }
        const { referrer } = document;
        if (referrer && new URL(referrer).origin === window.location.origin) {
            window.history.back();
        } else {
            window.location.href = '/';
        }
    }
</script>
