<div id="voucher-success-modal"
     class="fixed inset-0 z-50 overflow-y-auto"
     aria-labelledby="modal-title"
     role="dialog"
     aria-modal="true"
     data-controller="modal"
     data-action="keyup@window->modal#handleKeyup" >

  <div class="flex items-end justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">

    <div class="fixed inset-0 z-40 transition-opacity bg-gray-700 bg-opacity-75"
         aria-hidden="true"
         data-action="click->modal#close" ></div>

    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    <div class="inline-block relative z-50 px-4 pt-5 pb-4 overflow-hidden text-left align-bottom transition-all transform bg-white rounded-lg shadow-xl sm:my-8 sm:align-middle sm:max-w-sm sm:w-full sm:p-6">

      <button type="button"
              class="absolute top-0 right-0 mt-4 mr-4 text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 rounded-md p-1"
              data-action="click->modal#close"> <span class="sr-only">Close</span>
        <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <div class="flex items-center justify-center w-12 h-12 mx-auto bg-amber-100 rounded-full">
        <svg class="w-6 h-6 text-amber-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
        </svg>
      </div>

      <div class="mt-3 text-center sm:mt-5">
        <h3 class="text-lg font-semibold leading-6 text-amber-900" id="modal-title">
          Voucher Applied!
        </h3>
        <div class="mt-2">
          <p class="text-sm text-amber-700">
            Your discount has been successfully applied to the job post price.
          </p>
        </div>
      </div>

      <div class="mt-5 sm:mt-6">
        <button type="button"
                class="inline-flex justify-center w-full px-3 py-2 text-sm font-semibold text-white bg-amber-600 rounded-md shadow-sm hover:bg-amber-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600"
                data-action="click->modal#close"> Got it!
        </button>
      </div>
    </div> </div>
</div>