<%
  # Set meta tags for job posting form
  set_meta_tags(
    title: "Post a Job - DrillCrew",
    description: "Post your drilling & mining and oil & gas job opportunities on DrillCrew. Reach thousands of qualified candidates in the energy sector with our job board.",
    url: new_job_offer_form_url
  )
%>

<%= turbo_frame_tag "new_job_offer" do %>
<div class="min-h-screen bg-amber-50 py-12">
  <div class="max-w-4xl mx-auto px-5 sm:px-5 lg:px-12">
    <!-- Pricing Header -->
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-amber-900 mb-4">Post a New Job</h1>
      <p class="text-lg text-amber-700">Reach thousands of qualified candidates with your job posting</p>
    </div>

    <!-- Pricing Card -->
    <div class="bg-white rounded-lg shadow-xl p-8 mb-12">
      <div class="flex justify-between items-center mb-8">
        <div>
          <h2 class="text-2xl font-semibold text-amber-900">Standard Listing</h2>

        </div>
        <div class="text-3xl font-bold text-amber-900">$<%= Voucher.default_price %></div>
      </div>

      <ul class="mb-8 space-y-4">
        <li class="flex items-center text-amber-700">
          <svg class="w-5 h-5 mr-3 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          Present on the homepage for <%= Voucher.default_offer_duration_words %>
        </li>
        <li class="flex items-center text-amber-700">
          <svg class="w-5 h-5 mr-3 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          Reach thousands of qualified candidates
        </li>
      </ul>
    </div>

    <%= turbo_frame_tag "voucher_applied_modal" do %>

    <% end %>

    <!-- Job Form -->
    <%= turbo_frame_tag "job_form" do %>
     <%= render 'form', job: @job %>
    <% end %>
  </div>
</div>
<% end %>