<div class="max-w-7xl mx-auto mt-16 flex flex-col md:flex-row" data-controller="tabs" data-tabs-initial-tab="job_offers">
  <aside class="w-full md:w-1/4 md:pr-6 mb-6 md:mb-0">
    <!-- Mobile dropdown navigation -->
    <div class="md:hidden mb-4">
      <label for="mobile-tab-select" class="block text-sm font-medium text-gray-700 mb-2">Navigate to:</label>
      <select id="mobile-tab-select" data-action="change->tabs#showFromSelect" class="w-full px-4 py-2 border border-gray-300 rounded-md bg-white focus:ring-2 focus:ring-amber-500 focus:border-amber-500">
        <option value="job_offers">Your Job Offers</option>
        <option value="details">Details</option>
        <option value="password">Password</option>
        <option value="billing">Billing</option>
        <option value="close_account">Close Account</option>
      </select>
    </div>

    <!-- Desktop button navigation -->
    <nav class="hidden md:block space-y-2">
      <button type="button" data-action="click->tabs#show" data-tabs-target="tab" data-tab-name="job_offers" class="w-full text-left px-4 py-2 rounded-md bg-gray-100 hover:bg-gray-200">Your Job Offers</button>
      <button type="button" data-action="click->tabs#show" data-tabs-target="tab" data-tab-name="details" class="w-full text-left px-4 py-2 rounded-md bg-gray-100 hover:bg-gray-200">Details</button>
      <button type="button" data-action="click->tabs#show" data-tabs-target="tab" data-tab-name="password" class="w-full text-left px-4 py-2 rounded-md bg-gray-100 hover:bg-gray-200">Password</button>
      <button type="button" data-action="click->tabs#show" data-tabs-target="tab" data-tab-name="billing" class="w-full text-left px-4 py-2 rounded-md bg-gray-100 hover:bg-gray-200">Billing</button>
      <button type="button" data-action="click->tabs#show" data-tabs-target="tab" data-tab-name="close_account" class="w-full text-left px-4 py-2 rounded-md text-red-600 hover:bg-red-100">Close Account</button>
    </nav>
  </aside>
  <div class="w-full md:flex-1 bg-white p-6 rounded-lg shadow">
    <!-- Job Offers Pane -->
    <div data-tabs-target="pane" data-tab-name="job_offers" class="hidden">
      <h2 class="text-2xl font-semibold mb-4">Your Job Offers</h2>
      <table class="w-full text-left border-collapse">
        <thead>
        <tr class="bg-gray-100">
          <th class="px-4 py-2">Title</th>
          <th class="px-4 py-2">Invoice</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
        </thead>
        <tbody>
        <% current_employer.order_placements.includes(:job_offer).each do |order_placement| %>
          <%= render 'job_offer', job_offer: order_placement.job_offer %>
        <% end %>
        </tbody>
      </table>
    </div>
    <!-- Password Pane -->
    <div data-tabs-target="pane" data-tab-name="password">
      <h2 class="text-2xl font-semibold mb-4">Set New Password</h2>
      <%= form_with model: current_employer, url: update_password_employers_path, method: :patch, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :password, 'New Password', class: "block text-sm font-medium text-amber-900" %>
          <%= f.password_field :password, required: true, class: 'mt-1 w-full border border-gray-300 rounded-md p-2' %>
        </div>
        <div class="mb-4">
          <%= f.label :password_confirmation, 'Confirm Password', class: "block text-sm font-medium text-amber-900" %>
          <%= f.password_field :password_confirmation, required: true, class: 'mt-1 w-full border border-gray-300 rounded-md p-2' %>
        </div>
        <%= f.submit 'Update Password', class: 'px-6 py-2 bg-amber-900 text-white rounded-md hover:bg-amber-800' %>
      <% end %>
    </div>

    <!-- Billing Pane -->
    <div data-tabs-target="pane" data-tab-name="billing" class="hidden">
      <h2 class="text-2xl font-semibold mb-4">Billing Details</h2>
      <div class="mb-4 text-amber-900">
        You can change your billing and tax details placing the new order.
      </div>
    </div>
    <!-- Close Account Pane -->
    <div data-tabs-target="pane" data-tab-name="close_account" class="hidden">
      <h2 class="text-2xl font-semibold mb-4 text-red-600">Close Account</h2>
      <p class="mb-4 text-gray-700">This will permanently delete your account and all associated data.</p>
      <%= button_to 'Close My Account', close_account_employers_path, method: :delete, data: { turbo: false, confirm: 'Are you absolutely sure?' }, class: 'px-6 py-2 bg-red-600 text-white rounded-md hover:bg-red-500' %>
    </div>
    <!-- Details Pane -->
    <div data-tabs-target="pane" data-tab-name="details" class="hidden">
      <h2 class="text-2xl font-semibold mb-4">Details</h2>
      <%= form_with model: current_employer, url: update_details_employers_path, method: :patch, local: true, html: { multipart: true } do |f| %>
        <div class="mb-4">
          <%= f.label :company_name, 'Company Name', class: "block text-sm font-medium text-amber-900" %>
          <%= f.text_field :company_name, required: true, class: 'mt-1 w-full border border-gray-300 rounded-md p-2' %>
        </div>
        <div class="mb-4">
          <%= f.label :logo, "Company Logo", class: "block text-sm font-medium text-amber-900" %>
          <div class="flex items-center gap-4">
            <% if f.object.logo&.attached? %>
              <%= image_tag f.object.logo.variant(resize_to_limit: [200, 200]),
                class: "w-32 h-32 rounded-md object-cover border mb-2",
                alt: "Current company logo" %>
            <% else %>
              <div class="w-32 h-32 rounded-md object-cover border mb-2 flex items-center justify-center text-gray-400 bg-gray-50">No logo</div>
            <% end %>
            <div>
              <%= f.file_field :logo, class: "mt-1 w-full border border-amber-900 rounded-md p-2" %>
              <p class="text-xs text-gray-500 mt-1">JPG, PNG, SVG up to 1MB</p>
            </div>
          </div>
        </div>
        <div class="mb-4">
          <label class="block text-sm font-medium text-amber-900" for="employer_email">
            Email Address
            <span class="ml-1 cursor-pointer" title="Contact support to change your email address.">
              <svg class="inline h-4 w-4 text-ember-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 20a8 8 0 100-16 8 8 0 000 16z" /></svg>
            </span>
          </label>
          <input type="email" id="employer_email" value="<%= current_employer.email %>" class="mt-1 w-full border border-gray-300 rounded-md p-2 bg-gray-100 cursor-not-allowed" readonly tabindex="-1" />
        </div>
        <%= f.submit 'Update Details', class: 'px-6 py-2 bg-amber-900 text-white rounded-md hover:bg-amber-800' %>
      <% end %>
    </div>
  </div>
</div>
