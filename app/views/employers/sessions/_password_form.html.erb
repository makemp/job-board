<h3 class="text-xl font-medium mb-4 text-gray-800">Login with Email & Password</h3>
<%= form_with url: employer_session_path, scope: :employer, local: true do |f| %>
  <%= f.hidden_field :email, value: email %>
  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700" %>
    <%= f.password_field :password, required: true, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
  </div>
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center">
      <!--  <%= f.check_box :remember_me %> -->
      <!-- <%= f.label :remember_me, class: "ml-2 text-gray-600" %>  -->
    </div>
  </div>
  <%= f.submit 'Sign in', class: "w-full inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-full text-white bg-amber-900 hover:bg-amber-700 transition-colors duration-300" %>
<% end %>
